{
    "parser": "@typescript-eslint/parser",
    "ignorePatterns": "**/*.d.ts",
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "semi": true,
                "tabWidth": 4
            }
        ]
    }
}